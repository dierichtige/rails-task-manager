<h1>My tasks</h1>
<ul class="list-unstyled">
  <% @tasks.each do |task| %>
    <li><% if task.completed %>
          <i class="fa-regular fa-square-check"></i>
        <% else %>
          <i class="fa-regular fa-square"></i>
        <% end %>
        <%= link_to task.title, task_path(task) %><span class="set-blue-color"> â€¢ </span>
    <%= link_to task_path(task), data: {turbo_method: :delete, turbo_confirm: "Delete #{task.title}?"} do %>
      <i class="fas fa-trash-alt"></i>
    <% end %>
    </li>
  <% end %>
</ul>
<div class="border-top pt-2">
  <%= link_to tasks_new_path do %>
    <p><i class="fa-solid fa-plus"></i> Add a new task</p>
  <% end %>
</div>
