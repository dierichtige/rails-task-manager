<div class="d-flex justify-content-between">
  <h1><%= @task.title %></h1>
  <%= link_to edit_task_path do %>
    <h2 class="btn btn-light py-2"><i class="fas fa-edit"></i> Edit this task</h2>
  <% end %>
</div>
<div class="card w-100 my-3 bg-light">
  <p class="p-3 m-0"><%= @task.details %></p>
</div>
<% if @task.completed %>
  <p><i class="fa-regular fa-square-check"></i> This task is completed</p>
<% else %>
  <p><i class="fa-regular fa-square"></i> This task is not completed yet</p>
<% end %>

<div class="border-top pt-2">
  <%= link_to tasks_path do %>
    <p><i class="fas fa-history"></i></i> Back to list</p>
  <% end %>
</div>
